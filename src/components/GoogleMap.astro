---
const apiKey = "AIzaSyDDOqzmVebLnPz2C6E5pFpL-yDylBByBvI"; // ‚ö†Ô∏è Reemplaza con tu API Key
const mapUrl = `https://maps.googleapis.com/maps/api/js?key=${apiKey}&callback=initMap&loading=async`;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mapa en Astro</title>
    <script async src={mapUrl}></script>
    <style>
      /* Contenedor principal */
      .container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }

      /* Mapa responsivo */
      #map {
        width: 100%;
        height: 100%;
      }

      /* Barra de navegaci√≥n inferior */
      .nav-bar {
        display: flex;
        justify-content: space-around;
        padding: 10px;
        background: white;
        border-radius: 10px;
        width: 100%;
        max-width: 400px;
        position: fixed;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
      }

      /* √çtems de la navegaci√≥n */
      .nav-item {
        text-align: center;
        font-size: 14px;
        cursor: pointer;
      }

      .nav-item i {
        font-size: 20px;
        color: #6c5ce7;
      }

      /* üîπ Modal deslizante */
      .modal {
        position: fixed;
        bottom: -100%;
        left: 50%;
        transform: translateX(-50%);
        width: 95%;
        max-width: 400px;
        background: white;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.2);
        transition: bottom 0.4s ease-in-out;
        padding: 20px;
        text-align: center;
        z-index: 101;
      }

      /* ‚úÖ Mostrar modal cuando tenga la clase "active" */
      .modal.active {
        bottom: 0;
      }

      /* Fondo con desenfoque cuando el modal est√° activo */
      .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease-in-out;
        z-index: 100;
      }

      .modal-overlay.active {
        opacity: 1;
        visibility: visible;
      }

      /* Contenido del modal */
      .modal-content {
        position: relative;
      }

      /* Bot√≥n de cierre flotante */
      .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: transparent;
        border: none;
        font-size: 18px;
        font-weight: bold;
        color: #f44336;
        cursor: pointer;
        transition: color 0.3s;
      }

      .close-btn:hover {
        color: #d32f2f;
      }

      /* T√≠tulo del lugar */
      .title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 20px;
        font-weight: bold;
        color: #333;
      }

      /* Estado del negocio */
      .status {
        margin: 10px 0;
        font-size: 16px;
        display: inline-block;
        background: #4caf50;
        color: white;
        padding: 6px 14px;
        border-radius: 12px;
        font-weight: bold;
      }
      /* Categor√≠a del negocio */
      .category {
        font-size: 15px;
        color: #666;
        margin: 10px 0;
        text-align: justify;
        line-height: 1.5;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: inline-block;
        background: #f5f5f5;
        padding: 6px 14px;
        border-radius: 12px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div id="map"></div>

      <!-- Barra de navegaci√≥n -->
      <div class="nav-bar">
        <div class="nav-item" onclick="window.location.href='/home'"> 
          <i class="fa-solid fa-house"></i>
          <p>Inicio</p>
        </div>
        <div class="nav-item">
          <i class="fa-solid fa-ticket"></i>
          <p>Promos</p>
        </div>
        <div class="nav-item" onclick="window.location.href='/pagina4'">
          <i class="fa-solid fa-credit-card"></i>
          <p>Billetera</p>
        </div>
        <div class="nav-item"><i class="fa-solid fa-user"></i> <p>T√∫</p></div>
      </div>

      <!-- Modal deslizante mejorado -->
      <div id="modal" class="modal">
        <div class="modal-content">
          <!-- Bot√≥n de cierre flotante -->
          <button id="closeBtn" class="close-btn">‚úñ</button>

          <h2 id="place-name" class="title">
            Nombre del lugar
          </h2>

          <p id="place-status" class="status">Abierto
          </p>
          -
          <p id="place-category" class="category">Categor√≠a del negocio</p>
        </div>
      </div>

      <!-- Fondo de desenfoque al abrir el modal -->
      <div id="modal-overlay" class="modal-overlay"></div>
    </div>

    <script>
      // Asegura que initMap est√© en el √°mbito global
      window.initMap = function () {
        const map = new google.maps.Map(document.getElementById("map"), {
          center: { lat: -0.19722256015464223, lng: -78.43589448585686 }, // Quito, Ecuador
          zoom: 18,
          disableDefaultUI: false,
        });

        // Lugares con marcadores
        const locations = [
          {
            position: { lat: -0.19678636455530643, lng: -78.43678110558979 },
            name: "Tienda do√±a Pancha",
            estado: "Abierto",
            negocio: "Tenda",
          },
          {
            position: { lat: -0.195, lng: -78.437 },
            name: "Zapatero a tu zapato",
            estado: "Cerrado",
            negocio: "Zapateria",
          },
          {
            position: { lat: -0.19547421343063034, lng: -78.43583972950567 },
            name: "Marcus",
            estado: "Abierto",
            negocio: "Restaurante",
          },
        ];

        // Agregar marcadores
        locations.forEach((location) => {
          let marker = new google.maps.Marker({
            position: location.position,
            map: map,
            title: location.name,
          });

          marker.addListener("click", () => {
            openModal(location.name, location.estado, location.negocio);
          });
        });
      };

      // Funci√≥n para abrir el modal
      function openModal(name, estado, negocio) {
        let modal = document.getElementById("modal");
        let overlay = document.getElementById("modal-overlay");
        let placeName = document.getElementById("place-name");
        let placeStatus = document.getElementById("place-status");
        let placeNegocio = document.getElementById("place-category");

        placeName.innerText = name;
        placeStatus.innerText = estado;
        placeNegocio.innerText = negocio;

        modal.classList.add("active");
        overlay.classList.add("active");
      }

      document.addEventListener("DOMContentLoaded", function () {
        // Obtener el bot√≥n y asignarle un evento de clic
        document
          .getElementById("closeBtn")
          .addEventListener("click", function () {
            closeModal();
          });

        document
          .getElementById("modal-overlay")
          .addEventListener("click", closeModal);
      });

      // Funci√≥n para cerrar el modal
      function closeModal() {
        let modal = document.getElementById("modal");
        let overlay = document.getElementById("modal-overlay");

        modal.classList.remove("active");
        overlay.classList.remove("active");
      }
    </script>
  </body>
</html>
